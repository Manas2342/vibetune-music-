# Production Environment Variables for VibeTune

# Application Environment
NODE_ENV=production

# Server Configuration
PORT=8084
HOST=0.0.0.0

# Spotify API Configuration
SPOTIFY_CLIENT_ID=c988ff755c9d4e2594da9e1440a890ea
SPOTIFY_CLIENT_SECRET=4b3328d89b494cebaa60ad77af98dd30
SPOTIFY_REDIRECT_URI=https://yourdomain.com/callback

# Database Configuration
DATABASE_URL=sqlite:/app/data/vibetune.db

# Cloud Storage Configuration (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=vibetune-music-cache

# Music Service Configuration
ENABLE_YOUTUBE_FALLBACK=true
ENABLE_SPOTIFY_PREMIUM=true
AUDIO_QUALITY=high
MAX_CACHE_SIZE_GB=50
OFFLINE_MUSIC_PATH=/app/storage/offline

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
SESSION_SECRET=your_super_secure_session_secret_here_min_32_chars

# SSL/HTTPS Configuration
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/vibetune.crt
SSL_KEY_PATH=/etc/ssl/private/vibetune.key

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/vibetune.log

# Redis Configuration (if using)
REDIS_URL=redis://redis:6379

# Email Configuration (for notifications)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9464

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com
STATIC_ASSETS_URL=https://assets.yourdomain.com

# Application URLs
APP_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com

# Social Features
ENABLE_SOCIAL_FEATURES=true
ENABLE_USER_REGISTRATION=true

# Analytics
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=your_ga_id

# Content Security
CONTENT_SECURITY_POLICY=default-src 'self' https:; script-src 'self' 'unsafe-inline' https:; style-src 'self' 'unsafe-inline' https:

# Privacy
PRIVACY_MODE=false
COLLECT_ANONYMOUS_STATS=true