# VibeTune Environment Configuration
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development
PORT=8080
PING_MESSAGE=ping

# Spotify API Configuration (REQUIRED)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8080/callback

# YouTube API Configuration (Optional - for YouTube audio fallback)
YOUTUBE_API_KEY=your_youtube_api_key_here

# AWS S3 Configuration (Optional - for cloud audio caching)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET=vibetune-music-cache

# Cache and Storage Configuration
MAX_CACHE_SIZE_GB=10
OFFLINE_MUSIC_PATH=./storage/offline

# JWT Secret (Auto-generated if not provided)
JWT_SECRET=your_jwt_secret_here

# Database Configuration (SQLite by default)
DATABASE_URL=./vibetune.db

# CORS Origins (for production)
CORS_ORIGINS=https://vibetune.netlify.app,https://www.vibetune.app

# Feature Flags
ENABLE_YOUTUBE_FALLBACK=true
ENABLE_CLOUD_CACHING=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_SOCIAL_FEATURES=true
